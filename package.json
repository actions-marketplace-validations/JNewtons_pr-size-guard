{
  "name": "pr-size-guard",
  "version": "1.1.1",
  "private": true,
  "description": "GitHub Action that guards PR size and checks for test changes.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "prettier -w .",
    "bundle": "esbuild index.js --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js",
    "test": "node tests/local-sim.js",
    "check:dist": "npm run bundle && git diff --exit-code dist/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.4"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "prettier": "^3.3.3"
  }
}
